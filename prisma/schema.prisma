// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Highlight {
  id        String   @id @default(cuid())
  bookTitle String
  author    String
  text      String
  location  Int?
  createdAt DateTime @default(now())
}
